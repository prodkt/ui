{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["../../packages/shadcn-ui/components/*"],
      "@/lib/*": ["../../packages/shadcn-ui/lib/*"],
      "@repo/*": ["../../packages/*"]
    }
  }
}
